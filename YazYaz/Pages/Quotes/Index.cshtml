@page
@model YazYaz.Pages.Quotes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Quote) 
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if ((await AuthorizationService.AuthorizeAsync(
                    User, item,
                    QuoteOperations.Update)).Succeeded)
                    {
                        <a asp-page="./Edit" asp-route-id="@item.QuoteID">Edit</a>
                        <text> | </text>
                    }

                    <a asp-page="./Details" asp-route-id="@item.QuoteID">Details</a>

                    @if ((await AuthorizationService.AuthorizeAsync(
                    User, item,
                    QuoteOperations.Delete)).Succeeded)
                    {
                        <text> | </text>
                        <a asp-page="./Delete" asp-route-id="@item.QuoteID">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
