@page
@model YazYaz.Pages.RecordsModel

@{
    ViewData["Title"] = "Records";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Records</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Owner.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Speed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Record) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speed)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RecordID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RecordID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.RecordID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
